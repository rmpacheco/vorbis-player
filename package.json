{
  "name": "vap",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "dist-electron/main.cjs",
  "homepage": "./",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "deploy": "node scripts/deploy.js --prod",
    "deploy:preview": "node scripts/deploy.js",
    "deploy:quick": "vercel --prod",
    "deploy:env": "vercel env pull .env.local",
    "electron:build": "vite build --config electron.vite.config.ts",
    "electron:dev": "concurrently \"npm run dev\" \"npm run electron:build\" \"npx wait-on http://127.0.0.1:3000 && npx wait-on dist-electron/main.cjs && cross-env VITE_DEV_SERVER_URL=http://127.0.0.1:3000 electron .\"",
    "electron:pack": "npm run build && npm run electron:build && electron-builder",
    "electron:dist": "npm run build && npm run electron:build && electron-builder --publish=never",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@radix-ui/react-scroll-area": "^1.2.9",
    "@types/react-window": "^1.8.8",
    "better-sqlite3": "^12.2.0",
    "chokidar": "^4.0.3",
    "music-metadata": "^11.8.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-window": "^1.8.11",
    "sharp": "^0.34.3",
    "styled-components": "^6.1.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/react": "^18.3.9",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.4.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^34.0.0",
    "electron-builder": "^25.1.8",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.vorbis.player",
    "productName": "Vorbis Player",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  }
}